// 將您的設定放入此檔案中以覆寫預設值和使用者設定。
{
    "editor.fontFamily": "'SF Mono','蘋方-繁', 'Courier New', monospace",
    "editor.mouseWheelZoom": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.meta": true,
        "**/*.*.meta": true,
        "**/*.unity": true,
        "**/*.unityproj": true,
        "**/*.mat": true,
        "**/*.fbx": true,
        "**/*.FBX": true,
        "**/*.tga": true,
        "**/*.cubemap": true,
        "**/**.prefab": true,
        "**/Library": true,
        "**/ProjectSettings": true,
        "**/Temp": true,
        "formatOnSave.on": true,
        "formatOnSave.extensions": [
            "js",
            "java",
            "php",
            "CS"
        ]
    }
}